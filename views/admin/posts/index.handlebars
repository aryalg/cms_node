<h1>ALL POSTS</h1>

{{> home/form-msgs}}


<table class="table table-bordered">
    <thead>
        <tr>
            <th>Id</th>
            <th>File</th>
            <th>Title</th>
            <th>Status</th>
            <th>Category</th>
            <th>Allow Comments</th>
            <th>Post Link</th>
            <th>Date</th>
            <th>User</th>
        </tr>
    </thead>

    <tbody>

        {{#each posts}}
        <tr>
            <td>{{id}}</td>
            <td><img height="50" src="/uploads/{{file}}" alt="Image File"></td>
            <td>{{title}}</td>
            <td>{{status}}</td>
            <td>{{category.name}}</td>
            <td>{{allowComments}}</td>
            <td><a href="/post/{{slug}}">View</a></td>
            <td>{{generateTime date "MMMM Do YYYY"}}</td>
            <td>{{user.firstName}} {{user.lastName}}</td>
        </tr>
        {{/each}}
    </tbody>
</table>