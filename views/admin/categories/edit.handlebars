<div class="row">
    
    <div class="col-sm-4">
        <h1>Edit Category</h1>
        <form action="/admin/categories/edit/{{category.id}}?_method=PUT" method="post">
            <div class="form-group">
                <label for="name"></label>
                <input type="text" name="name" placeholder="Enter title" class="form-control" value="{{category.name}}">
            </div>
            <button class="btn btn-primary" type="submit">Update Category</button>
        </form>
    </div>
</div>