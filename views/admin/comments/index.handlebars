<h1>Comments</h1>

<table class="table">
  <thead>
    <tr>
      <th scope="col">ID</th>
      <th scope="col">Owner</th>
      <th scope="col">Status</th>
      <th scope="col">Body</th>
      <th scope="col">Date</th>
    </tr>
  </thead>
  <tbody>

      {{#each comments}}
            <tr>
                <td>{{id}}</td>
                <td>{{user.firstName}} {{user.lastName}}</td>
                <td><input data-id="{{id}}" type="checkbox" name="approveComment" {{#if approveComment}} checked {{/if}}></td>
                <td>{{body}}</td>
                <td>{{generateTime date "MMMM Do YYYY"}}</td>
                <td>
                <form action="/admin/comments/{{id}}?_method=DELETE" method="post">
                    <button type="submit" class="btn btn-danger">DELETE</button>
                </form>
            </td>
            </tr>
     {{/each}}

  </tbody>
</table>
